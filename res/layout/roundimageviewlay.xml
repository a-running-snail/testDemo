<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:makeramen="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <com.runningsnail.androiddemo.roundimageview.RoundedImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="center"
        makeramen:border_color="#333333"
        makeramen:border_width="2dip"
        makeramen:corner_radius="100dp" />

    <com.runningsnail.androiddemo.roundimageview.RoundedImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="center"
        makeramen:border_color="#333333"
        makeramen:border_width="2dip"
        makeramen:corner_radius="60dp" />

    <com.runningsnail.androiddemo.roundimageview.RoundedImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="center"
        makeramen:border_color="#333333"
        makeramen:border_width="2dip"
        makeramen:corner_radius="30dp" />

</LinearLayout>